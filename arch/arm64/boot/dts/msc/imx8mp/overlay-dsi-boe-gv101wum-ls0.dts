/dts-v1/;
/plugin/;

#include <dt-bindings/gpio/gpio.h>

/ {
	fragment@4200 {
		target = <&mipi_dsi>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";
			panel@0 {
				reg = <0>;
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_lcd0_panel>;
				compatible = "boe,gv101wum-ls0";
				backlight = <&lcd0_backlight>;
				pp33-gpios = <&gpio1 0 GPIO_ACTIVE_HIGH>;
				enable-gpios = <&gpio4 21 GPIO_ACTIVE_LOW>;
				status = "okay";
			};
		};
	};

	fragment@4201 {
		target = <&lcdif1>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@4202 {
		target = <&pwm1>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@4203 {
		target = <&lcd0_backlight>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@4204 {
		target = <&gpu_3d>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@4205 {
		target = <&gpu_2d>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@4206 {
		target = <&ml_vipsi>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@4207 {
		target = <&mix_gpu_ml>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@4208 {
		target = <&i2c1>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			focaltech@38 {
				compatible = "focaltech,fts";
				reg = <0x38>;
				focaltech,reset-gpio = <&gpio4 22 GPIO_ACTIVE_LOW>;
				focaltech,irq-gpio = <&gpio4 28 0x02>;
				interrupt-parent = <&gpio4>;
				interrupts = <28 0x02>;

				focaltech,max-touch-number = <5>;
				focaltech,display-coords =  <0 0 1200 1920>;

				status = "okay";
			};
		};
	};
};
